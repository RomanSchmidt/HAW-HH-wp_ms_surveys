{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "preserveSymlinks": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "noEmitHelpers": false,
    "strictPropertyInitialization": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node", "mocha"]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "src/Survey/node_modules",
    "src/Opinion/node_modules"
  ]
}